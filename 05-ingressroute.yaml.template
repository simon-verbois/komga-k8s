# This IngressRoute is more secure than the default ingress
# To use this IngressRoute, please refer to: https://github.com/simon-verbois/microk8s-config-traefik/tree/main
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: komga-ingressroute
  namespace: komga
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`komga.example.org`)
      kind: Rule
      priority: 1 
      services:
        - name: komga-service
          port: http
      middlewares:
        - name: coraza-waf
          namespace: traefik
        - name: security-headers
          namespace: traefik
        - name: geoblock
          namespace: traefik
  tls:
    certResolver: ovhresolver
    domains:
      - main: "komga.example.org"
    options:
      name: tls-profile
      namespace: traefik

